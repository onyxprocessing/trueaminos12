modules = ["nodejs-20"]
[nix]
packages = ["gh"]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TrueAminoStore"

[[workflows.workflow]]
name = "TrueAminoStore"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TrueAminoStore && npm install && NODE_ENV=development PORT=5000 HOST=0.0.0.0 npx tsx server/index.ts"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "chmod +x ./clone_repository.sh && ./clone_repository.sh"]

[[ports]]
localPort = 5000
externalPort = 80
